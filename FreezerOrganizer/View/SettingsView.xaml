<UserControl x:Class="FreezerOrganizer.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:FreezerOrganizer.ViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding Path}" Margin="0,20,0,0" Grid.Row="0" Grid.Column="0" />
        <Button Content="Browse" Command="{Binding OpenFileDialog}" Margin="30,20,0,0" Grid.Row="0" Grid.Column="1" />
    </Grid>
</UserControl>
