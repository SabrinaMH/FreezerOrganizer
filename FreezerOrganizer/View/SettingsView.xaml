<UserControl x:Class="FreezerOrganizer.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:FreezerOrganizer.ViewModel">
    <UserControl.DataContext>
        <viewModel:SettingsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding FileName}" Margin="0,20,0,0" Grid.Row="0" Grid.Column="0" />
        <Button Content="Browse" Command="{Binding OpenFileDialog}" Margin="30,20,0,0" Grid.Row="0" Grid.Column="1" />
    </Grid>
</UserControl>
