<UserControl x:Class="FreezerOrganizer.View.SearchView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewModel="clr-namespace:FreezerOrganizer.ViewModel">
    
    <UserControl.DataContext>
        <viewModel:SearchViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Margin="0,0,0,20" Grid.Row="0" Grid.Column="0" Width="100" Text="{Binding Input}"/>
        <Button x:Name="btnSearch" Margin="30,0,0,20" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Search" Width="100" Command="{Binding SearchCommand}"/>
        <DataGrid x:Name="dataGridResults" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedItem}"/>
    </Grid>
</UserControl>
